{
    // more details on https://www.typescriptlang.org/v2/en/tsconfig
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES6",
        "emitDeclarationOnly": true,
        "removeComments": true, // Remove all comments except copy-right header comments beginning with /*!
        "lib": ["es6", "ESNext"], // List of library files to be included in the compilation
        "esModuleInterop": true,
        "declarationDir": "src/types",
        "declaration": true,
        "noEmit": false,
        "allowJs": true,
        "moduleResolution": "Node"
    },
    "include": ["src/file.ts", "src/helper.ts"],
    "exclude": ["node_modules", "src/__test__/**/*"],
    "compileOnSave": false
}
